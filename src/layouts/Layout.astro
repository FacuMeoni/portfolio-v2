---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Portfolio of Facundo Meoni, Fullstack developer with 2 years of experience in web development. Discover my projects and technical skills" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image.webp" href="/facu-logo.webp" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>
<style is:global>
	html {
		font-family: ui-monospace, Menlo,  Monaco, Lucida Console, 'Courier New', Courier, monospace;
		background-color: #000;
		letter-spacing: -0.0 25rem;
	}

	body,
	figure {
		padding: 0;
		margin: 0;
	}

	a {
		text-decoration: none;
	}

	ul {
		list-style: none;
		margin: 0;
		padding: 0;  
	} 

	*, *::before, *::after {
		box-sizing: border-box; 
	}

	h1, h2, h3, h4 {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
		margin: 0;
		color: #fff;
	}

	h2 {
		font-weight: 500;
		font-size: 18px;
	}

	p {
		color: #fafafa; 
		font-size: 14px; 
		margin: 0;
		line-height: 1.5;
		text-wrap: pretty;
	}

	span {
		font-size: 14px;
		margin: 0;
	}

	@media print {
		.no-print {
			display: none !important;
		}
		html {
			background-color: #fff;
		}
		p {
			color: #555;
		}
		h1, h2, h3, h4 {
			color: #000;
		}
		/* Ocultar fecha y hora en la impresión */
		@page {
			margin: 0.5in;
		}
		/* Ocultar encabezados y pies de página del navegador */
		@page :first {
			margin-top: 0.5in;
		}
		@page :left {
			margin-left: 0.5in;
		}
		@page :right {
			margin-right: 0.5in;
		}
	}

	.print {
		display: none !important;
	}

	@media print {
		.print{
			display: block !important;
		}
		/* Ocultar cualquier elemento de fecha/hora que el navegador pueda agregar */
		body::before,
		body::after {
			display: none !important;
		}
	}
</style>
