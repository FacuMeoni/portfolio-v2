---
 const { title }  = Astro.props
---

<section>
    { title && <h2> { title }  </h2> }
    <slot />
</section>

<style>
    section {
        max-width: 600px;
        margin: 0 auto 30px;
    }
    
    h2 {
        margin-bottom: 8px;
        font-weight: 600;
        line-height: 1.5;
        font-size: 18px
    }
</style>